
# Server Configuration
PORT=4000
NODE_ENV=development
# Set to true if you want to allow any host to connect to the server
ALLOW_ANY_HOST=true

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/learnit
MONGODB_DB_NAME=learnit

# JWT Secret
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRE=7d

# Admin Credentials
ADMIN_EMAIL=admin@learnit.com
ADMIN_PASSWORD=admin1234

# Set to true to force admin password update
FORCE_ADMIN_PASSWORD_UPDATE=false
